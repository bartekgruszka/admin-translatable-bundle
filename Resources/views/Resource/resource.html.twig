{% extends '@FSiAdmin/Resource/resource.html.twig' %}

{% block content %}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <h3 id="page-header">{{ title|trans({}, 'FSiAdminBundle') }} {{ element.id }} {{ translatable_locale }}</h3>
                {{ form_start(form, { action: path('fsi_admin_translatable_resource', { element: element.id, locale: translatable_locale }), 'attr': { class: 'form-horizontal' }|merge(form.vars.attr) }) }}
                    {{ form_widget(form) }}
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-default">{{ 'resource.button.save'|trans({}, 'FSiAdminBundle')  }}</button>
                            <button type="reset" class="btn btn-primary">{{ 'resource.button.reset'|trans({}, 'FSiAdminBundle')  }}</button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
