NameVirtualHost *:80

<VirtualHost *:80>
    ServerName {{ vhost_name }}
    ServerAlias www.{{ vhost_name }}

    DocumentRoot {{ vhost_docroot }}
    <Directory {{ vhost_docroot }}>
        Options -Indexes FollowSymLinks MultiViews
        AllowOverride All
        Order allow,deny
        allow from all
    </Directory>
</VirtualHost>
